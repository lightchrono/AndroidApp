<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.light.androidapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MySocket"
        android:allowBackup="true"
        android:icon="@mipmap/brawlicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Splash"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.Login"
            android:screenOrientation="landscape" />
        <activity android:name=".Activities.Register" />
        <activity
            android:name=".Activities.MainMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.FirstPlayer"
            android:screenOrientation="landscape" />
        <activity android:name=".Activities.game" android:screenOrientation="landscape"></activity>
    </application>

</manifest>