<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerimage"
    tools:context="com.example.light.androidapp.Activities.Register">

    <EditText
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="257dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="17dp"
        android:layout_marginLeft="93dp"
        android:textColor="@color/White"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintRight_toLeftOf="@+id/register_username"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.227" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="17dp"
        android:layout_marginLeft="111dp"
        android:textColor="@color/White"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="116dp" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="257dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="174dp"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/register_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="257dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="228dp"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Password"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/White"
        app:layout_constraintRight_toLeftOf="@+id/register_password"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Confirm Password"
        android:layout_marginLeft="50dp"
        android:textColor="@color/White"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="228dp"
        app:layout_constraintRight_toLeftOf="@+id/register_password2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/register_cancel"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="280dp"
        android:text="Cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register_register"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="280dp"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_usernametv"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="58dp"
        app:layout_constraintLeft_toRightOf="@+id/register_username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_emailtv"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="116dp"
        app:layout_constraintLeft_toRightOf="@+id/register_email"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_passwordtv"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="174dp"
        app:layout_constraintLeft_toRightOf="@+id/register_password"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
